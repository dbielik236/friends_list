
<div class="container bg-light">
  <h1><%= @friend.first_name %> <%= @friend.last_name %></h1>
  
  <p><%= @friend.phone %> | <%= @friend.email %></p>

  <div>
    <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-info" %> |
    <%= link_to "Back to My Friends", friends_path, class:"btn btn-dark" %>
    <br/><br/><br/>
    <%= button_to "Delete Friend", @friend, method: :delete, class:"btn btn-danger" %>
  </div>
</div>  
