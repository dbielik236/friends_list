
<h1>My Friends</h1>
<br/>
<div class="table-responsive-sm">
  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th></th>
      </tr>
    </thead>
  
    <tbody class="table-group-divider" >
      <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= link_to "View", friend, class:'btn btn-dark' %></td>
        </tr>
      <% end %>
      
    </tbody>
  
  </table>
</div>

<%= link_to 'Add friend', new_friend_path, class:"btn btn-secondary"%>


